; Test: Basic inheritance with Extends

class Animal {
    def name:string ""
    
    Constructor (n:string) {
        name = n
    }
    
    fn speak:string () {
        return "..."
    }
}

class Dog {
    Extends(Animal)
    
    Constructor (n:string) {
        name = n
    }
    
    fn speak:string () {
        return "Woof!"
    }
}

class Cat {
    Extends(Animal)
    
    Constructor (n:string) {
        name = n
    }
    
    fn speak:string () {
        return "Meow!"
    }
}

class InheritanceTest {
    sfn m@(main):void () {
        def dog (new Dog("Buddy"))
        def cat (new Cat("Whiskers"))
        print dog.name
        print (dog.speak())
        print cat.name
        print (cat.speak())
        print "Done"
    }
}
