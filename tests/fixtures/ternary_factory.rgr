; Test: Multiple Static Factory Methods with Ternary
; Expected: Should compile and run, output "K q Done"

class Piece {
    def symbol:string ""
    def isWhite:boolean true
    
    Constructor (s:string white:boolean) {
        symbol = s
        isWhite = white
    }
    
    sfn King:Piece (white:boolean) {
        return (new Piece((? white "K" "k") white))
    }
    
    sfn Queen:Piece (white:boolean) {
        return (new Piece((? white "Q" "q") white))
    }
}

class Test_TernaryFactory {
    sfn m@(main):void () {
        def king (Piece.King(true))
        def queen (Piece.Queen(false))
        print king.symbol
        print queen.symbol
        print "Done"
    }
}
