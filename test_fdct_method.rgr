; Test FDCT class with int_buffer - using instance method

class FDCT {
    def name:string "test"
    
    fn test:void () {
        ; Allocate fixed-size buffer as local
        def cosTable:int_buffer (int_buffer_alloc 64)
        
        ; Set a few values to test
        int_buffer_set cosTable 0 1024
        int_buffer_set cosTable 1 1004
        
        def val0:int (int_buffer_get cosTable 0)
        print ("Value 0: " + (to_string val0))
    }
}

class Main {
    sfn m@(main):void () {
        def f (new FDCT())
        f.test()
    }
}
